extends ../base
block content 
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="username",type="text", required,placeholder="User Name")
        input(name="password", type="password", required,placeholder="Password")
        input(type="submit", value="Log In")
        br
        a(href="/users/github/start") Github Login
        include ../partials/social-login
    div.auth-switch
        span 계정이 없으신가요?
        a(href="/join") Join now &rarr;